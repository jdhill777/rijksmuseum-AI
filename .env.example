# Anthropic API Key - Required for Claude API calls
ANTHROPIC_API_KEY=your_api_key_here

# Rijksmuseum API Key - Required for artwork searches
RIJKSMUSEUM_API_KEY=your_rijksmuseum_api_key_here

# Server configuration
PORT=3000                  # Port the server will listen on (defaults to 3000)
HOST=0.0.0.0               # Host/IP to bind server to (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
ALLOWED_ORIGINS=           # Comma-separated list of allowed origins for CORS (empty for defaults)
CLOUDFLARE_HOSTNAME=       # Hostname for Cloudflare hosted version (e.g. 'art.example.com')
